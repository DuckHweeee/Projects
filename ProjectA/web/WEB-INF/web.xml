<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ViewProduct</servlet-name>
        <servlet-class>servlet.ViewProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addNewProduct</servlet-name>
        <servlet-class>servlet.addNewProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManagerDish</servlet-name>
        <servlet-class>servlet.ManagerDishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDish</servlet-name>
        <servlet-class>servlet.UpdateDishServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageOrderServlet</servlet-name>
        <servlet-class>servlet.ManageOrderServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewProduct</servlet-name>
        <url-pattern>/ViewProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addNewProduct</servlet-name>
        <url-pattern>/addNewProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManagerDish</servlet-name>
        <url-pattern>/ManagerDish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDish</servlet-name>
        <url-pattern>/UpdateDish</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageOrderServlet</servlet-name>
        <url-pattern>/ManageOrderServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login.jsp </welcome-file>
        <!--<welcome-file>Login.jsp</welcome-file>-->
        <!--<welcome-file>index.html</welcome-file>-->
    </welcome-file-list>
</web-app>
